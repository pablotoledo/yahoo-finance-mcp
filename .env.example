# Yahoo Finance MCP Server Configuration

# Transport type (stdio or http)
YF_MCP_TRANSPORT=stdio

# HTTP configuration (only used when transport=http)
YF_MCP_HTTP__HOST=0.0.0.0
YF_MCP_HTTP__PORT=3000
YF_MCP_HTTP__STATELESS=false

# CORS configuration (comma-separated origins or * for all)
# YF_MCP_HTTP__CORS_ORIGINS=http://localhost:3000,https://example.com

# Logging level (DEBUG, INFO, WARNING, ERROR)
YF_MCP_LOG_LEVEL=INFO

# Rate limiting (future feature)
YF_MCP_ENABLE_RATE_LIMIT=false
YF_MCP_REQUESTS_PER_MINUTE=60

# OAuth 2.1 Authentication (requires separate Authorization Server)
# YF_MCP_HTTP__ENABLE_AUTH=false
# YF_MCP_HTTP__ISSUER_URL=https://auth.example.com
# YF_MCP_HTTP__REQUIRED_SCOPES=read
